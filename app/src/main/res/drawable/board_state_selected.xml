<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- PRESSED -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke
                android:color="@color/colorBoardBorder"
                android:width="@dimen/board_stroke_width"/>
            <solid
                android:color="@color/colorButtonSelected"/>
        </shape>
    </item>

    <!-- DEFAULT -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:color="@color/colorBoardBorder"
                android:width="@dimen/board_stroke_width"/>
            <solid
                android:color="@color/colorButtonSelected"/>
        </shape>
    </item>

</selector>