<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- PRESSED -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke
                android:color="@color/colorPrimaryTranslucent"
                android:width="@dimen/keypad_stroke_width"/>
            <corners
                android:radius="@dimen/keypad_corner_radius"/>
            <solid
                android:color="#eeeeee"/>
        </shape>
    </item>

    <!-- DEFAULT -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:color="@color/colorPrimaryTranslucent"
                android:width="@dimen/keypad_stroke_width"/>
            <corners
                android:radius="@dimen/keypad_corner_radius"/>
            <solid
                android:color="#ffffff"/>
        </shape>
    </item>

</selector>